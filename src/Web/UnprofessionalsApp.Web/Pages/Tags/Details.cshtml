@page "{tagId?}"
@model UnprofessionalsApp.Web.Pages.Tags.DetailsModel
@{
}

@{
	ViewData["Title"] = "Category Details";
	var counter = 1;
}

@if (this.Model.AreThereAnyPostsForTag)
{
	<div class="row">
		<div class="container col-md-8 text-center">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Title</th>
						<th scope="col">Date of creation</th>
						<th scope="col">Created by</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var post in Model.RelatedPosts)
					{
						<tr>
							<th scope="row">@(counter++)</th>
							<td><a asp-controller="Posts" asp-action="Details" asp-route-postId="@(post.Id)">@(post.Title)</a></td>
							<td>@(post.DateOfCreation)</td>
							<td><a asp-controller="Account" asp-action="Details" asp-route-userId="@(post.UserId)">@(post.Username)</a></td>
						</tr>
					}
				</tbody>
			</table>

		</div>
	</div>
}