@page
@using System.Globalization;
@model UnprofessionalsApp.Web.Pages.Home.SearchModel
@{
	ViewData["Title"] = "Search Page";
}

<h1>@ViewData["Title"]</h1>

<div class="container mx-auto col-md-6 text-center my-auto">
	<h2>Custom search field</h2>
	<form asp-page="/home/search" method="get" class="d-flex">
		<input type="text" class="form-control input-lg" name="searchResult" placeholder="Search..." value="@Model.SearchResult" />
		<span class="input-group-btn">
			<input type="submit" value="Search" class="btn border-dark bg-white text-dark">
		</span>
	</form>
</div>

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<style>
		body {
			font-family: Arial;
		}

		/* Style the tab */
		.tab {
			overflow: hidden;
			border: 1px solid #ccc;
			background-color: #f1f1f1;
		}

			/* Style the buttons inside the tab */
			.tab button {
				background-color: inherit;
				float: left;
				border: none;
				outline: none;
				cursor: pointer;
				padding: 14px 16px;
				transition: 0.3s;
				font-size: 17px;
			}

				/* Change background color of buttons on hover */
				.tab button:hover {
					background-color: #ddd;
				}

				/* Create an active/current tablink class */
				.tab button.active {
					background-color: #ccc;
				}

		/* Style the tab content */
		.tabcontent {
			display: none;
			padding: 6px 12px;
			border: 1px solid #ccc;
			border-top: none;
		}
	</style>
</head>
<body>

	<h2>Search Results</h2>
	<p>Click on the buttons to view if there are any results:</p>

	<div class="tab">
		<button class="tablinks" onclick="openCity(event, 'Posts')">Posts</button>
		<button class="tablinks" onclick="openCity(event, 'Users')">Users</button>
		<button class="tablinks" onclick="openCity(event, 'Categories')">Categories</button>
		<button class="tablinks" onclick="openCity(event, 'Tags')">Tags</button>
	</div>

	<div id="Posts" class="tabcontent">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Title</th>
					<th scope="col">Creation Date</th>
					<th scope="col">Created By</th>
				</tr>
			</thead>
			<tbody @(Model.Counter = 1)>
				@foreach (var post in Model.Posts)
				{
				<tr>
					<td scope="row">@(Model.Counter++)</td>
					<td><a asp-page="/Posts/Details" asp-route-id="@(post.Id)">@(post.Title)</a></td>
					<td>@(post.DateOfCreation.ToString(@"dd/MM/yyyy", CultureInfo.InvariantCulture))</td>
					<td><a asp-area="Identity" asp-page="/Account/Details" asp-route-id="@(post.UserId)">@(post.Username)</a></td>
				</tr>
				}
			</tbody>
		</table>
	</div>

	<div id="Users" class="tabcontent">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Username</th>
					<th scope="col">Email</th>
					<th scope="col">Registration Date</th>
				</tr>
			</thead>
			<tbody @(Model.Counter = 1)>
				@foreach (var user in Model.Users)
				{
					<tr>
						<td scope="row">@(Model.Counter++)</td>
						<td><a asp-area="Identity" asp-page="/Account/Details" asp-route-id="@(user.Id)" >@(user.Username)</a></td>
						<td>@(user.Email)</td>
						<td>@(user.DateOfRegistration.ToString(@"dd/MM/yyyy", CultureInfo.InvariantCulture))</td>
					</tr>
				}
			</tbody>
		</table>
	</div>

	<div id="Categories" class="tabcontent">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Category Name</th>
				</tr>
			</thead>
			<tbody @(Model.Counter = 1)>
				@foreach (var category in Model.Categories)
				{
					<tr>
						<td scope="row">@(Model.Counter++)</td>
						<td><a href="#">@(category.Name)</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>

	<div id="Tags" class="tabcontent">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Category Name</th>
				</tr>
			</thead>
			<tbody @(Model.Counter = 1)>
				@foreach (var tag in Model.Tags)
				{
					<tr>
						<td scope="row">@(Model.Counter++)</td>
						<td><a href="#">@(tag.Name)</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>

	<script>
		function openCity(evt, cityName) {
			var i, tabcontent, tablinks;
			tabcontent = document.getElementsByClassName("tabcontent");
			for (i = 0; i < tabcontent.length; i++) {
				tabcontent[i].style.display = "none";
			}
			tablinks = document.getElementsByClassName("tablinks");
			for (i = 0; i < tablinks.length; i++) {
				tablinks[i].className = tablinks[i].className.replace(" active", "");
			}
			document.getElementById(cityName).style.display = "block";
			evt.currentTarget.className += " active";
		}
	</script>

</body>
</html>

