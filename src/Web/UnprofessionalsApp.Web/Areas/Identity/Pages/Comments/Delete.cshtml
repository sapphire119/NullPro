@page "{commentId?}"
@model UnprofessionalsApp.Web.Areas.Identity.Pages.Comments.DeleteModel
@{
	ViewData["Title"] = "Comment Delete";
}

<div asp-validation-summary="All" class="text-danger"></div>
<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1 class="text-center">Are you sure you want to delete this post?</h1>
		<hr style="height:2px;" />
		<form class="mx-auto" method="post" asp-area="Identity" asp-page="/comments/delete">
			<div class="form-group">
				<label asp-for="Data.Description" class="text-mishmash"></label>
				<textarea class="form-control" rows="3" disabled style="resize:vertical;">@(Model.Data.Description)</textarea>
			</div>
			<div class="button-holder mt-4 d-flex justify-content-center">
				<button type="submit" class="btn btn-danger btn-xs">Delete <i style="font-size:24px" class="fa"></i></button>
			</div>
			<input type="hidden" asp-for="Data.Id" />
		</form>
	</div>
</div>