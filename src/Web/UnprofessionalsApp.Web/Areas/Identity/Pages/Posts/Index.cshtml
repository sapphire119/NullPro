@page
@model UnprofessionalsApp.Web.Areas.Identity.Pages.Posts.IndexModel
@{
	ViewData["Title"] = "My posts";
}

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h4>Bootstrap Snipp for Datatable</h4>
			<div class="table-responsive">
				@if (this.Model.Data.Any())
				{
					<table id="mytable" class="table table-bordred table-striped">
						<thead>
							<tr>
								<td>Made on date</td>
								<td>Description</td>
								<td>Made on post</td>
								<td>Tags</td>
							</tr>
						</thead>
						<tbody>
							@foreach (var post in Model.Data)
							{
								<tr>
									<td>@(post.DateOfCreation)</td>
									<td>@(post.Description)</td>
									<td><a asp-controller="Posts" asp-action="Details" asp-route-postId="@(post.Id)">@(post.Title)</a></td>
									<td>
										@foreach (var tag in post.Tags)
										{
											<a class="badge badge-secondary" asp-page="/tags/details" asp-route-tagId="@(tag.Id)">@(tag.Name)</a>
										}
									</td>
									<td><p data-placement="top" title="Edit"><a asp-area="Identity" asp-page="/posts/edit" asp-route-postId="@(post.Id)" class="btn btn-primary btn-xs" data-title="Edit"><i style="font-size:24px" class="fa">&#xf040;</i></a></p></td>
									<td><p data-placement="top" title="Delete"><a asp-area="Identity" asp-page="/posts/delete" asp-route-postId="@(post.Id)" class="btn btn-danger btn-xs" data-title="Delete"><i style="font-size:24px" class="fa">&#xf00d;</i></a></p></td>
								</tr>
							}
						</tbody>
					</table>
				}
			</div>
		</div>
	</div>
</div>

