@model IEnumerable<UnprofessionalsApp.ViewInputModels.ViewModels.Users.UserViewModel>
@{
	var counter = 0;
	var userCounter = 0;
}
<div class="row">
	@foreach (var user in Model)
	{
		@if (counter != 0 && counter % 3 == 0)
		{
			@(Html.Raw("</div>"))
			counter = 0;
			@(Html.Raw("<div class=\"row\">"))
		}

		<div class="col mt-2">
			<div class="container">
				<div class="row">
					<div class="col-3">
						<a asp-controller="Account" asp-action="Details" asp-route-userId="@(user.Id)">
							<img src="@(user.ImageUrl)" alt="Dropbox" height="100" width="100" />
						</a>
					</div>
					<div class="col-3">
						<div class="font-weight-bold">Username:</div>
						<div class="font-weight-bold">Description:</div>
					</div>
					<div class="col-6">
						<div><a asp-controller="Account" asp-action="Details" asp-route-userId="@(user.Id)">@(user.Username)</a></div>
						<div>@(user.Description)</div>
					</div>
				</div>
			</div>
		</div>

		counter++;
		userCounter++;
	}

	@if (userCounter == Model.Count())
	{
		var timesToPrint = 3 - counter;

		@for (int j = 0; j < timesToPrint; j++)
		{
			<div class="col mt-2">
				<div class="container text-white">

				</div>
			</div>
		}
	}
</div>
